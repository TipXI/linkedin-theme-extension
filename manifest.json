{
    "name": "LinkedIn Theme Restorer",
    "description": "Automatically restores the LinkedIn theme (dark/light) via cookie.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://*.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "LinkedIn Theme Settings",
        "default_icon": {
            "128": "icon-dark.png"
        }
    },
    "icons": {
        "128": "icon-dark.png"
    }
}