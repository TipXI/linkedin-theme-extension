{
  "name": "LinkedIn Theme Restorer",
  "description": "Automatically restores the LinkedIn theme (dark/light) via cookie.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Theme Settings",
    "default_icon": {
      "128": "icon-dark.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "linkedin-theme-restorer@local-dev",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "128": "icon-dark.png"
  }
}